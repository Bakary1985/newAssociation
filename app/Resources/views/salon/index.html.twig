{% extends 'baseAdmins.html.twig' %}
{% block body %}
    <h1>Listes des salons</h1>
    <ul>
        <li>
            <a href="{{ path('salon_new') }}">Ajouter un salon</a>
        </li>
    </ul>
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salon in salons %}
            <tr>
                <td>{{ salon.name }}</td>
                <td>
                            <a href="{{ path('salon_edit', { 'id': salon.id }) }}">Modifier</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
